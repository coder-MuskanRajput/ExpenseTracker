   <img src="https://cdn-icons-png.flaticon.com/128/8196/8196973.png" alt="">
   <h4>PennyWise</h4>

   <form action="/signin" method="post">
     <br>
    <%if(loginCheck){ %>
      <span class="alert"><%= loginCheck %></span>
    <%} %>
      
            <input type="text" name="username" placeholder="Username" required>
            <input type="password" name="password" placeholder="Enter Password" required>
            <br>
            
            <button class="button">Login</button>
            <br>
        <div class="routes">
          <a href="/signup">Sign up</a>
          <a href="/forget">Forget Password</a>
        </div>
          <br>
          <button class="home"><a href="/">Back to Home</a></button>
   </form>
</div>
</div>

<!-- for popup message (flash) -->

<%let rsclass = ''%>
  <%if(response.length == 0){%>
  <%  rsclass = 'hide'%>
  <%}%>
  
  <div class="popUp <%= rsclass %>" >
    <div class="done" >
       <h3><i class="fa-solid fa-circle-check fa-2xl"></i></h3>
       <br>
       <h1>WELCOME</h1>
       <p><%= response %></p>
       <button id="successBtn" type="button" class="btn" >Now Login</button>
    </div>
  </div>

